{
  "private": true,
  "workspaces": [
    "packages/sdk",
    "packages/server",
    "packages/app"
  ],
  "scripts": {
    "build": "docker build -t tee-rex --platform linux/amd64 .",
    "build:nitro": "docker build -f Dockerfile.nitro -t tee-rex-nitro --platform linux/amd64 .",
    "dev": "bun run --cwd packages/server dev",
    "start": "bun run --cwd packages/server start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun run lint && bun run test:typecheck && bun run test:unit",
    "test:typecheck": "bun run --cwd packages/sdk test:lint && bun run --cwd packages/server typecheck",
    "test:unit": "bun run --cwd packages/sdk test:unit && bun run --cwd packages/server test:unit && bun run --cwd packages/app test:unit",
    "test:e2e": "bun run --cwd packages/sdk test:e2e && bun run --cwd packages/app test:e2e:all",
    "test:all": "bun run test && bun run test:e2e",
    "app": "bun run --cwd packages/app dev",
    "sdk:build": "bun run --cwd packages/sdk build",
    "aztec:check": "bun scripts/check-aztec-spartan.ts",
    "aztec:update": "bun scripts/update-aztec-version.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "bun-types": "^1.3.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  }
}
