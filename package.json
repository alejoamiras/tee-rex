{
  "private": true,
  "workspaces": [
    "packages/sdk",
    "packages/server",
    "packages/integration",
    "packages/demo"
  ],
  "scripts": {
    "build": "docker build -t tee-rex --platform linux/amd64 .",
    "build:nitro": "docker build -f Dockerfile.nitro -t tee-rex-nitro --platform linux/amd64 .",
    "dev": "bun run --cwd packages/server dev",
    "start": "bun run --cwd packages/server start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun run lint && bun run test:typecheck && bun run test:unit",
    "test:typecheck": "bun run --cwd packages/sdk test:lint && bun run --cwd packages/server typecheck",
    "test:unit": "bun run --cwd packages/sdk test:unit && bun run --cwd packages/server test:unit && bun run --cwd packages/demo test:unit",
    "test:integration": "bun run --cwd packages/integration test",
    "test:e2e:fullstack": "bun run --cwd packages/demo test:e2e:fullstack",
    "test:all": "bun run test && bun run test:integration",
    "demo": "bun run --cwd packages/demo dev",
    "sdk:build": "bun run --cwd packages/sdk build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "bun-types": "^1.3.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.8.3"
  }
}
