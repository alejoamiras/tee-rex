{
  "private": true,
  "workspaces": ["sdk", "server", "integration", "benchmarks"],
  "scripts": {
    "build": "docker build -t tee-rex --platform linux/amd64 .",
    "dev": "bun run --cwd server dev",
    "start": "bun run --cwd server start",
    "test": "bun run test:lint && bun run test:unit",
    "test:lint": "bun run --cwd sdk test:lint",
    "test:unit": "bun run --cwd sdk test:unit",
    "test:integration": "bun run --cwd integration test",
    "test:all": "bun run test && bun run test:integration",
    "sdk:build": "bun run --cwd sdk build",
    "benchmark": "bun run --cwd benchmarks benchmark",
    "benchmark:compare": "bun run --cwd benchmarks compare"
  },
  "devDependencies": {
    "bun-types": "^1.3.8"
  }
}
